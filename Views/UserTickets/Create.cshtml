@model Helpful_Hackers._XBCAD7319._POE.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>User Ticket Details</h1>
    <p>Please fill in this form to send your ticket.</p>
    <hr>
        <form asp-action="Create">
        <div class="container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" autocomplete="off" type="text" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" autocomplete="off" type="text" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="HIGH">HIGH</option>
                    <option value="MEDIUM">MEDIUM</option>
                    <option value="LOW">LOW</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateTicket" class="control-label"></label>
                <input asp-for="DateTicket" autocomplete="off" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
                <span asp-validation-for="DateTicket" class="text-danger"></span>
            </div>


            <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" autocomplete="off" id="subject" style="height:100px" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        <hr>

            <div class="form-group">
                <input type="submit" value="Create" class="container btn-primary" />
            </div>
            </div>
        </form>

        
         <hr>

        <!-- Add a Back Button -->
        <a class="btn btn-secondary" asp-controller="Auth" asp-action="UserProfile">Back to Dashboard</a>



</div>
